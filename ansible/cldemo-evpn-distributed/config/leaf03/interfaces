
#loopback interface
auto lo
iface lo inet loopback
  address 10.0.0.13/32
  clagd-vxlan-anycast-ip 10.0.0.134
  alias loopback interface

# Management interface

auto eth0
iface eth0 inet dhcp
    vrf mgmt

auto mgmt
iface mgmt
    address 127.0.0.1/8
    vrf-table auto

# Port to Server03
auto swp1
iface swp1
  alias to Server03
  # This is required for Vagrant only
  post-up ip link set swp1 promisc on

# Port to Server04
auto swp2
iface swp2
  alias to Server04
  # This is required for Vagrant only
  post-up ip link set swp2 promisc on

# Port to Leaf04
auto swp49
iface swp49
  alias to Leaf04
  # This is required for Vagrant only
  post-up ip link set swp49 promisc on

# Port to Leaf04
auto swp50
iface swp50
  alias to Leaf04
  # This is required for Vagrant only
  post-up ip link set swp50 promisc on

# Port to Spine01
auto swp51
iface swp51
  mtu 9216
  alias to Spine01

# Port to Spine02
auto swp52
iface swp52
  mtu 9216
  alias to Spine02

# CLAG Peerlink bond
auto peerlink
iface peerlink
  mtu 9000
  bond-slaves swp49 swp50

# CLAG Peerlink L2 interface.
# This creates VLAN 4094 that only lives on the peerlink bond
# No other interface will be aware of VLAN 4094
auto peerlink.4094
iface peerlink.4094
  address 169.254.1.1/30
  clagd-peer-ip 169.254.1.2
  clagd-backup-ip 10.0.0.14
  clagd-sys-mac 44:39:39:ff:40:95
  clagd-priority 100

# Bond to Server03
auto bond03
iface bond03
  mtu 9000
  bond-slaves swp1
  bridge-access 13
  clag-id 3

# Bond to Server04
auto bond04
iface bond04
  mtu 9000
  bond-slaves swp2
  bridge-access 24
  clag-id 4

# Define the bridge for STP
auto bridge
iface bridge
  bridge-vlan-aware yes
  # bridge-ports includes all ports related to VxLAN and CLAG.
  # does not include the Peerlink.4094 subinterface
  bridge-ports bond03 bond04 peerlink vni13 vni24 vxlan4001
  bridge-vids 13 24
  bridge-pvid 1

auto evpn-vrf
iface evpn-vrf
   vrf-table auto

auto vxlan4001
iface vxlan4001
    vxlan-id 104001
    vxlan-local-tunnelip 10.0.0.13
    bridge-learning off
    bridge-access 4001


# VxLAN Tunnel for Server1-Server3 (Vlan 13)
auto vni13
iface vni13
  mtu 9000
  vxlan-id 13
  vxlan-local-tunnelip 10.0.0.13
  bridge-access 13
  bridge-learning off
  mstpctl-bpduguard yes
  mstpctl-portbpdufilter yes

#VxLAN Tunnel for Server2-Server4 (Vlan 24)
auto vni24
iface vni24
  mtu 9000
  vxlan-id 24
  vxlan-local-tunnelip 10.0.0.13
  bridge-access 24
  bridge-learning off
  mstpctl-bpduguard yes
  mstpctl-portbpdufilter yes
  bridge-arp-nd-suppress on

auto vlan13
iface vlan13
    mtu 9000
    address 10.1.3.13/24
    address-virtual 44:39:39:ff:00:13 10.1.3.1/24
    vlan-id 13
    vlan-raw-device bridge
    vrf evpn-vrf

auto vlan24
iface vlan24
    mtu 9000
    address 10.2.4.13/24
    address-virtual 44:39:39:ff:00:24 10.2.4.1/24
    vlan-id 24
    vlan-raw-device bridge
    vrf evpn-vrf

# L3 VLAN interface per tenant (for L3 VNI)

auto vlan4001
iface vlan4001
    hwaddress 44:39:39:FF:40:95
    vlan-id 4001
    vlan-raw-device bridge
    vrf evpn-vrf

